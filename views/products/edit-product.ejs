<%- include('../partials/header') %>

<div class="bg-gray-50 min-h-screen py-12 px-4">
    <div class="bg-white max-w-4xl mx-auto border border-gray-200 rounded-xl shadow-lg relative">
        
        <div class="flex items-center justify-between p-6 border-b border-gray-100">
            <h3 class="text-2xl font-bold text-gray-800">
                Edit Product
            </h3>
            <a href="/products" class="text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </a>
        </div>

        <div class="p-8">
            <form method="POST" action="/product/update/<%= data._id %>" enctype="multipart/form-data" class="space-y-8">
                
                <div class="bg-gray-50 p-6 rounded-lg border border-dashed border-gray-300">
                    <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Product Media</h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <div class="space-y-3">
                            <label class="block text-xs font-bold text-gray-500 uppercase">Main Image</label>
                            <div class="relative group w-32 h-32">
                                <img src="/images/<%= data.porductImage %>" class="w-full h-full object-cover rounded-lg border-2 border-white shadow-md" />
                                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                                    <span class="text-white text-xs">Replace</span>
                                </div>
                            </div>
                            <input type="hidden" name="productImageOld" value="<%= data.porductImage %>">
                            <input type="file" name="product-image" class="block w-full text-xs text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-cyan-50 file:text-cyan-700 hover:file:bg-cyan-100 cursor-pointer" />
                        </div>

                        <div class="md:col-span-3">
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-3">Gallery Samples</label>
                            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                                <% data.porductSamples.forEach((img, index) => { %>
                                <div class="bg-white p-2 rounded-lg border border-gray-200 shadow-sm">
                                    <img src="/images/<%= img %>" class="w-full h-20 object-cover rounded mb-2" />
                                    <input type="hidden" name="oldSamples[<%= index %>]" value="<%= img %>">
                                    <input type="file" name="newSample_<%= index %>" class="text-[10px] w-full file:bg-gray-100 file:border-0 file:rounded file:px-2">
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div class="col-span-2">
                        <label for="product-name" class="block text-sm font-semibold text-gray-700 mb-2">Product Name</label>
                        <input type="text" name="product-name" id="product-name" value="<%= data.productName %>" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 outline-none transition-all" placeholder="e.g. Apple iMac 27â€">
                    </div>

                    <div>
                        <label for="category" class="block text-sm font-semibold text-gray-700 mb-2">Category</label>
                        <input type="text" name="category" id="category" value="<%= data.category %>" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 outline-none transition-all" placeholder="Electronics">
                    </div>

                    <div>
                        <label for="brand" class="block text-sm font-semibold text-gray-700 mb-2">Brand</label>
                        <input type="text" name="brand" id="brand" value="<%= data.brand %>" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 outline-none transition-all" placeholder="Apple">
                    </div>

                    <div>
                        <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">Price ($)</label>
                        <input type="number" name="price" id="price" value="<%= data.price %>" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 outline-none transition-all" placeholder="2300">
                    </div>

                    <div class="col-span-2">
                        <label for="product-details" class="block text-sm font-semibold text-gray-700 mb-2">Product Description</label>
                        <textarea id="product-details" name="product-details" rows="5" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 outline-none transition-all" placeholder="Describe the product features..."><%= data.productDetails %></textarea>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-100">
                    <button type="button" class="px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-100">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-2.5 text-sm font-medium text-white bg-cyan-600 rounded-lg hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 transition-shadow shadow-md">
                        Update Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>